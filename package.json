{
  "name": "bebop-bridge-service",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://github.com/jrgenerative"
  },
  "main": "app/main.js",
  "scripts": {
    "clean:dist": "rimraf ./dist/**/*",
    "docker:pack": "docker build -f Dockerfile.Default -t jrgenerative/bebop-bridge-service:latest .",
    "docker:pack:pi": "docker build -f Dockerfile.Rpi -t jrgenerative/bebop-bridge-service-pi:latest .",
    "docker:run": "docker run --name bridge-service jrgenerative/bebop-bridge-service",
    "docker:push": "docker push jrgenerative/bebop-bridge-service:latest",
    "docker:push:pi": "docker push jrgenerative/bebop-bridge-service-pi:latest",
    "license-build": "concurrently \"license-checker --json --out src/assets/licenses/prod.json --production\" \"license-checker --json --out src/assets/licenses/dev.json --development\"",
    "tslint": "tslint \"./src/app/**/*.ts\" -c \"./tasks/tslint.json\" -t verbose --project \"./tsconfig.json\"",
    "tslint:w": "nodemon --watch src/app -e ts --exec \"npm run tslint --silent\"",
    "build:dev": "npm run clean:dist && npm run tslint && webpack --config ./config/webpack.config.dev.js",
    "build:prod": "npm run clean:dist && npm run tslint && webpack --config ./config/webpack.config.prod.js",
    "build:docker": "npm run build:prod && npm run docker:pack",
    "build:docker:pi": "npm run build:prod && npm run docker:pack:pi",
    "deploy:docker": "npm run build:docker && npm run docker:push",
    "deploy:docker:pi": "npm run build:docker:pi && npm run docker:push:pi",
    "server:dev": "node ./dist/app dummy",
    "server:prod": "node ./dist/app",
    "start": "npm run server:prod"
  },
  "dependencies": {
    "async": "^2.1.2",
    "bebop-bridge-shared": "jrgenerative/bebop-bridge-shared",
    "body-parser": "^1.15.2",
    "cors": "^2.8.1",
    "express": "^4.14.0",
    "fs-extra": "^2.0.0",
    "geolib": "^2.0.22",
    "jsftp": "^1.5.5",
    "method-override": "^2.3.6",
    "node-bebop": "^0.6.0",
    "socket.io": "^1.5.1"
  },
  "devDependencies": {
    "@types/async": "^2.0.38",
    "@types/body-parser": "0.0.33",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.0.35",
    "@types/fs-extra": "0.0.37",
    "@types/hammerjs": "^2.0.33",
    "@types/jasmine": "^2.2.34",
    "@types/method-override": "0.0.29",
    "@types/node": "^6.0.38",
    "@types/socket.io": "^1.4.27",
    "@types/source-map": "^0.5.0",
    "@types/uglify-js": "^2.0.27",
    "@types/webpack": "^2.0.0",
    "awesome-typescript-loader": "~3.0.0-beta.17",
    "codelyzer": "^2.0.0-beta.4",
    "concurrently": "^2.2.0",
    "config": "^1.24.0",
    "copy-webpack-plugin": "^4.0.0",
    "cson": "^4.0.0",
    "errorhandler": "^1.4.3",
    "hjson": "^2.4.1",
    "json-loader": "^0.5.4",
    "morgan": "^1.7.0",
    "npm-run-all": "^3.1.2",
    "properties": "^1.2.1",
    "rimraf": "~2.5.4",
    "rxjs": "^5.2.0",
    "to-string-loader": "^1.1.4",
    "toml": "^2.3.1",
    "ts-helpers": "1.1.2",
    "ts-node": "^2.0.0",
    "tslint": "~4.2.0",
    "tslint-loader": "^3.3.0",
    "typescript": "2.0.10",
    "webpack": "2.2.0-rc.2",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-dev-server": "2.2.0-rc.0",
    "webpack-merge": "~2.0.0",
    "webpack-node-externals": "^1.5.4",
    "x2js": "^3.1.0"
  }
}
